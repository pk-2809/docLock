rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // User Profile Images
    // Allow owner write, but potentially allow public read if needed for sharing
    // For now, restricting to owner or authenticated users? 
    // Since we use Signed URLs for private access, we can keep strict rules.
    match /profile_images/{fileName} {
      allow read: if request.auth != null; // Authenticated users (friends) can view profiles
      allow write: if request.auth != null && fileName.matches(request.auth.uid + '_.*');
    }
    
    // User Documents (Strictly Private)
    // Structure: users/{userId}/documents/{fileName}
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Default Deny
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
